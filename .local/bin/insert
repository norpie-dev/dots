#!/bin/sh

arg=$(cd ~/.config/symbol-lists && ls --format single-column | dmenu -l 30)

# Get user selection via dmenu from emoji file.
chosen=$(cut -d ';' -f1 ~/.config/symbol-lists/$arg | dmenu -fn JoyPixels:size=12 -l 30 | sed "s/ .*//")

# Exit if none chosen.
[ -z "$chosen" ] && exit

xdotool type "$chosen"
printf $chosen | xclip -sel clip
