#!/usr/bin/zsh

rm ~/repos/buildtools/jars/* -rf

java -jar ~/repos/buildtools/BuildTools.jar --rev latest --compile spigot --generate-docs --generate-source -o ~/repos/buildtools/jars

rm ~/repos/rpg-server/server.jar -rf

ln -s $(find ~/repos/buildtools/jars -type f | awk 'NR == 1 {print}') ~/repos/rpg-server/server.jar
